<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UUID"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/pink_A200" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="617e8096-bab7-43f3-bf96-3fd6f26d67b1"
        android:textSize="16dp"
        android:focusableInTouchMode="false"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAJOR"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/pink_A200" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faf_major"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MINOR"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/pink_A200" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faf_minor"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비콘 별명"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/pink_A200" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faf_alias"
        android:textSize="16dp"
        android:layout_marginBottom="24dp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/faf_add_button"
            android:text="등록"
            android:layout_marginRight="8dp"
            android:textSize="16dp" />

        <Button
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/faf_cancel_button"
            android:text="취소"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>